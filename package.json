{
  "name": "my-qwik-basic-starter",
  "description": "Demo App with Routing built-in (recommended)",
  "engines": {
    "node": ">=15.0.0"
  },
  "private": true,
  "scripts": {
    "build": "qwik build",
    "build.client": "vite build --force",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.server": "vite build -c adapters/static/vite.config.ts",
    "build.types": "tsc --noEmit",
    "deploy": "echo 'Run \"npm run qwik add\" to install a server adapter'",
    "dev": "vite --mode ssr --force --host",
    "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "fmt": "prettier --write .",
    "fmt.check": "prettier --check .",
    "lint": "eslint \"src/**/*.ts*\"",
    "prepare": "husky install",
    "preview": "qwik build preview && vite preview --open",
    "qwik": "qwik",
    "start": "vite --open --mode ssr",
    "test": "vitest",
    "test.run": "vitest --run",
    "update:types": "source .env.local; supabase gen types typescript --project-id \"$SUPABASE_ID\" --schema public > src/types/db.ts"
  },
  "devDependencies": {
    "@builder.io/qwik": "1.2.12",
    "@builder.io/qwik-city": "1.2.12",
    "@netlify/functions": "2.1.0",
    "@tailwindcss/forms": "0.5.6",
    "@tailwindcss/typography": "0.5.10",
    "@trivago/prettier-plugin-sort-imports": "4.2.0",
    "@types/eslint": "8.44.3",
    "@types/node": "20.7.0",
    "@typescript-eslint/eslint-plugin": "6.7.3",
    "@typescript-eslint/parser": "6.7.3",
    "autoprefixer": "10.4.16",
    "eslint": "8.50.0",
    "eslint-plugin-qwik": "1.2.12",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "netlify-cli": "16.4.2",
    "postcss": "8.4.30",
    "prettier": "3.0.3",
    "prettier-plugin-tailwindcss": "0.5.4",
    "sharp": "0.32.6",
    "tailwind-merge": "1.14.0",
    "tailwindcss": "3.3.3",
    "tailwindcss-hero-patterns": "0.1.2",
    "typescript": "5.2.2",
    "undici": "5.25.2",
    "vite": "4.4.9",
    "vite-tsconfig-paths": "4.2.1",
    "vitest": "0.34.5"
  },
  "lint-staged": {
    "!(/)**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "./src/*.css": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "prettier": {
    "bracketSameLine": true,
    "singleQuote": true,
    "tailwindConfig": "tailwind.config.ts",
    "plugins": [
      "prettier-plugin-tailwindcss",
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "@/*$",
      "~/*$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "dependencies": {
    "@ekwoka/rust-ts": "0.0.2",
    "@supabase/postgrest-js": "1.8.4",
    "dotenv": "16.3.1",
    "superstruct": "1.0.3"
  },
  "pnpm": {
    "overrides": {
      "postcss@>=7.0.0 <7.0.36": ">=7.0.36",
      "postcss@<7.0.36": ">=7.0.36"
    }
  }
}
